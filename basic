#!/bin/bash
# 一行目に絶対記述するshebang

# ホームディレクトリ
echo $HOME

# カレントディレクトリ
echo $PWD

# 現在ログインしているユーザのログインシェル
echo $SHELL

# 現在動作しているbashのパス
echo $BASH

# シェルスクリプト内で今何行目か
echo $LINENO

# 入力された引数の全てが文字列として格納される
echo $@

# 位置パラメータの個数
echo $#

# 直前に実行したコマンドの終了ステータス
echo $?

# 現在のプロセスのプロセスID
echo $$

# 直前に実行したバックグラウンドコマンドのプロセスID
echo $!

# ${配列名[インデックス]}で配列℟の要素を参照可能
fruits=(apple grape orange peach)
echo ${fruits[0]}

# :-は指定した変数が設定されているかによって展開される値を切り替える
# 引数のデフォルト値に使える
# 引数1に値がなければルートディレクトリをls
ls ${1:-/}

# ${変数名#パターン}でパターンにマッチした部分を取り除いて展開できる
# #が１つの場合は最短一致
# #が２つの場合は最長一致
file=home.tar.gz
echo ${file#*.}
echo ${file##*.}
